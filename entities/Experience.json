{
  "name": "Experience",
  "type": "object",
  "properties": {
    "company": {
      "type": "string",
      "description": "Company name"
    },
    "position": {
      "type": "string",
      "description": "Job position"
    },
    "start_date": {
      "type": "string",
      "format": "date",
      "description": "Start date"
    },
    "end_date": {
      "type": "string",
      "format": "date",
      "description": "End date (null if current)"
    },
    "location": {
      "type": "string",
      "description": "Job location"
    },
    "description": {
      "type": "string",
      "description": "Job description and achievements"
    },
    "key_achievements": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Key achievements"
    },
    "technologies": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Technologies used"
    }
  },
  "required": [
    "company",
    "position",
    "start_date"
  ]
}